{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "ES5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "."],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
